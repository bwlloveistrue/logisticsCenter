<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.logisticscenter.mapper.SystemInfoDao">
  <!-- 获得全查询列表 -->
  <select id="getAllSystem" resultType="systemInfoEntity">
    select * from adminInfo
  </select>
  
   <!-- 根据用户名获得用户对象 -->
   <select id="getSystemByName" resultType="systemInfoEntity">
     select * from adminInfo where
	   <where>
		   <if test="lastname != null and lastname != ''">
			   lastname=#{lastname}
		   </if>
	   </where>
  </select> 
  
  <!-- 根据id获得用户对象 -->
    <select id="getSystemInfo" resultType="systemInfoEntity">
     select * from adminInfo where loginid=#{loginid}
  </select> 
  
   <!-- 新增用户对象 -->
   <insert id="insertSystem" parameterType="systemInfoEntity">
      insert into adminInfo (loginid,lastname) values (#{loginid},#{lastname})
   </insert>
   
   <!-- 删除用户对象 -->
   <delete id="deleteSystem">
     delete from adminInfo where id=#{id}
   </delete>
   
   <!-- 更新用户对象 -->
   <update id="updateSystem" parameterType="systemInfoEntity">
      update adminInfo set lastname=#{lastname} where id=#{id}
   </update>
</mapper>